{
	"compileOnSave": true,
	"compilerOptions":
	{
		"lib": [ "es2020", "dom" ],
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"outDir": "lib",
		"declaration": true,
		"declarationMap": true
	},
	"include": [ "src" ],
	"typedocOptions": {
		"out": "docs",
		"exclude": [
			"src/index.ts",
			"src/errors.ts",
			"src/utils.ts",
			"src/Logger.ts",
			"src/EnhancedEventEmitter.ts",
			"src/tests/**/*.ts"
		],
		"excludePrivate": true,
		"excludeProtected": true,
		"excludeNotDocumented": true,
		"includeVersion": true,
		"theme": "default",
		"gitRemote": "origin",
		"hideGenerator": false
	}
}
