{
	"compileOnSave": true,
	"compilerOptions": {
		"lib": ["es2022"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
		"strict": true,
		"outDir": "lib",
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src"]
}
